@model IEnumerable<AnalistaQualidadeTeste.Models.Painel>

@{
    ViewBag.Title = "Tarefas";
}

@if (TempData["Mensagem"] != null)
{
   <div class="alert alert-success">
      <button type="button" class="close" data-dismiss="alert">x</button>
      <h2>@TempData["Mensagem"].ToString()</h2>
   </div>
}

<h2>Tarefas</h2>

<div>
    <a href="@Url.Action("Create")" class="btn btn-primary">Criar Tarefa </a>
    <br />
    <br />
</div>

<table class="table table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Titulo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tipo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Prioridade)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataAbertura)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Responsavel)
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Id)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Titulo)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Tipo)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Prioridade)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DataAbertura)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Responsavel)
    </td>

    <td>
        <a href="@Url.Action("Edit", "Paineis", new {id = item.Id})" class="btn btn-primary"> Editar </a>
        <a href="@Url.Action("Details", "Paineis", new {id = item.Id})" class="btn btn-warning"> Detalhes </a>
        <a href="@Url.Action("Delete", "Paineis", new {id = item.Id})" class="btn btn-danger"> Excluir</a>
    </td>
</tr>
}

</table>
